{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "control-center-layer": "top",
  "layer-shell": true,
  "layer-shell-cover-screen": true,
  "cssPriority": "application",
  "control-center-margin-top": 8,
  "control-center-margin-bottom": 8,
  "control-center-margin-right": 8,
  "control-center-margin-left": 0,
  "notification-2fa-action": true,
  "notification-inline-replies": true,
  "notification-icon-size": 64,
  "notification-body-image-height": 180,
  "notification-body-image-width": 180,
  "timeout": 12,
  "timeout-low": 6,
  "timeout-critical": 1,
  "fit-to-screen": true,
  "relative-timestamps": true,
  "control-center-width": 350,
  "control-center-height": 600,
  "notification-window-width": 500,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "text-empty": "",
  "script-fail-notify": true,

  "widgets": ["title", "notifications", "volume", "backlight", "buttons-grid"],
  "widget-config": {
    "title": {
      "text": "Notification Center",
      "clear-all-button": true,
      "button-text": "󰆴"
    },
    "label": {
      "max-lines": 1,
      "text": "Notification Center!"
    },

    "volume": {
      "label": "󰕾 "
    },
    "backlight": {
      "device": "intel_backlight",
      "label": "󰍹 "
    },
    "buttons-grid": {
      "actions": [
        {
          "label": "󰝟",
          "command": "amixer -D pipewire sset Master toggle",
          "type": "toggle"
        },
        {
          "label": "󰍭",
          "active": true,
          "command": "amixer -D pipewire sset Capture toggle",
          "type": "toggle"
        },
        {
          "label": " ",
          "type": "toggle",
          "active": true,
          "command": "fish ~/.config/scripts/wifi.fish"
        },
        {
          "label": "",
          "type": "toggle",
          "command": "fish ~/.config/scripts/bluetooth.fish"
        },
        {
          "label": "󰤄",
          "type": "toggle",
          "command": "fish ~/.config/scripts/night_mode.fish"
        },
        {
          "label": "",
          "command": "hyprlock"
        },
        {
          "label": "",
          "command": "reboot"
        },
        {
          "label": "",
          "command": "shutdown now"
        }
      ]
    }
  }
}
